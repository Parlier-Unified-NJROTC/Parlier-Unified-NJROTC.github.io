---
import { ClientRouter } from "astro:transitions";

import Hero from "../components/Hero.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title:string;
	heroTitle?:string;
	subtitle?:string;
	heroVideo?:ImageMetadata | string;
	disableHero?:boolean
}
const { title, heroTitle, subtitle, heroVideo, disableHero = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/Parlier-Unified_NJROTC.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>PHS NJROTC - {title}</title>

		<ClientRouter></ClientRouter>
	</head>
	<body>
		<Header transition:persist/>
		<!-- transition:persist is required, else switching pages messes it up -->
		<!-- Also I wanna disable it for department layout -->
		{disableHero ? null : <Hero title={heroTitle || title} subtitle={ subtitle } videoUrl={ heroVideo } transition:persist/>}
		<main transition:animate="slide">
			<slot />
		</main>
		<Footer transition:persist/>
	</body>
</html>

<style is:global>
	html,
	body {
		color: white;
		margin: 0;
		width: 100%;
		height: 100%;
		font-family:
			ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono',
			monospace;
		scroll-behavior: none;
	}

	main {
		padding-inline: 100px;
		
		background-color: #0d0725;
	}

	blockquote,pre{
		margin: 0;
		padding: 0;
	}

	h1{
		font-size: 4em;
	}
</style>
