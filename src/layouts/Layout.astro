---
import { ClientRouter } from "astro:transitions";

import Hero from "../components/Hero.astro";

interface Props {
	title:string;
	subtitle?:string;
	heroVideo?:ImageMetadata | string;
}
const { title, subtitle, heroVideo } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>PHS NJROTC - {title}</title>

		<ClientRouter></ClientRouter>
	</head>
	<body>
		<Hero title="PHS NJROTC" subtitle={ subtitle || title } videoUrl={ heroVideo }/>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		color: white;
		margin: 0;
		width: 100%;
		height: 100%;
		font-family:
			ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono',
			monospace;

		background-color: navy;
		scroll-behavior: ;
	}

	main {
		margin: 0;
		background-color: rgb(0, 0, 152);
	}
</style>
