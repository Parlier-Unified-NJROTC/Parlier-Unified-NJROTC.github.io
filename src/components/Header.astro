    <a href="/" class="logo-link">
      <img
        src="/Parlier-Unified_NJROTC.svg"
        alt="PHS NJROTC Logo"
        class="logo-img"
      />
    </a>

    <!-- Desktop Navigation -->
    <nav class="desktop-nav">
      <div class="dropdown">
      <a href="/about">About</a>
      <div class="dropdown-content">
          <a href="/about/unit">Unit</a>
          <a href="/about/instructor">Instructors</a>
      </div>
      </div>
      <div class="dropdown">
        <a href="/departments">Departments</a>
        <div class="dropdown-content">
          {
          departments.map(department => (
            <a href={"/departments/"+department.id}>{department.data.name}</a>
          ))}
        </div>
      </div>
      <div class="dropdown">
        <a href="/teams">Teams</a>
        <div class="dropdown-content">
          {
          teams.map(team => (
            <a href={"/teams/"+team.id}>{team.data.name}</a>
          ))}
        </div>
      </div>
      <a href="/parents">Parents</a>
      <div class="dropdown">
        <a href="/cadet">Cadets</a>
        <div class="dropdown-content">
          <a href="/cadet/PQS">PQS</a>
          <a href="/cadet/knowledge">Knowledge</a>
          <a href="/cadet/manuals">Manual</a>
          <a href="/cadet/tool">Tools</a>
        </div>
    </nav>

    <!-- Social Media Icons -->
    <div class="socials">
    </div>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu">
    <nav class="mobile-nav">
      <a href="/">Home</a>
      <div class="mobile-dropdown">
        <a href="/about">About</a>
        <div class="mobile-dropdown-content">
          <a href="/about/unit">Unit</a>
          <a href="/about/instructor">Instructors</a>
        </div>
      </div>
      <div class="mobile-dropdown">
        <a href="/departments">Departments</a>
        <div class="mobile-dropdown-content">
          <a href="/departments/">Admin</a>
          <a href="/departments/public-affairs/">Public Affairs</a>
          <a href="/departments/ops">Operations</a>
          <a href="/departments/supply">Supply</a>
        </div>
      </div>

      <div class="mobile-dropdown">
        <a href="/teams">Teams</a>
        <div class="mobile-dropdown-content">
          <a href="/teams/academic/">Academic Team</a>
          <a href="/teams/color-guard/">Color Guard</a>
          <a href="/teams/cyber/">Cyberpatriot Team</a>
          <a href="/teams/drill/">Drill Team</a>
          <a href="/teams/physical">Physical Fitness</a>
        </div>
      </div>

      <a href="/parents">Parents</a>
      <div class="mobile-dropdown">
        <a href="/cadet">Cadets</a>
        <div class="mobile-dropdown-content">
          <a href="/cadet/PQS">PQS</a>
          <a href="/cadet/knowledge">Knowledge</a>
          <a href="/cadet/manuals">Manual</a>
          <a href="/cadet/tool">Tools</a>
        </div>
      </div>
    </nav>

    <div class="mobile-socials">
      
    </div>
  </div>
</header>

<style>
  body.no-scroll {
    overflow: hidden;
  }
  header {
    background: #023c71;
    color: #fff;
    padding: 1.5rem 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    position: relative;
    
    z-index: 99999999;
  }

  .header-container {
    max-width: 1200px;
    height: 85px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20px;
    z-index: 99999999;
  }

  .logo-link {
    font-size: 1.7rem;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
    letter-spacing: 1px;
    display: flex;
    align-items: center;
  }

  .logo-img {
    height: 70px;
    vertical-align: middle;
    margin-right: 10px;
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: flex;
    margin-left: 2rem;
  }

  .desktop-nav a {
    color: #fff;
    margin: 0 1rem;
    text-decoration: none;
    display: flex;
    position: relative;
    padding: 0.5rem 0;
    transition: color 0.3s;
  }

  .desktop-nav a:hover {
    color: #ffcc00;
  }

  .desktop-nav a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #ffcc00;
    transition: width 0.3s;
  }

  .desktop-nav a:hover::after {
    width: 100%;
  }

  /* Desktop Dropdown Styles */
  .dropdown {
    position: relative;
    display: inline-block;
  }

  .dropdown-content {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #023c71;
    min-width: 200px;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    border-radius: 4px;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition:
      opacity 0.3s ease,
      transform 0.3s ease,
      visibility 0.3s;
  }

  .dropdown:hover .dropdown-content {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .dropdown-content a {
    color: #fff;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    transition: background-color 0.3s;
    margin: 0;
  }

  .dropdown-content a:hover {
    background-color: #023463;
    color: #ffcc00;
  }

  /* Social Media Icons */
  .socials {
    width: min-content;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .social-icon {
    color: #fff;
    margin: 0 1rem;
    text-decoration: none;
  }

  .social-icon img {
    height: 40px;
  }

  /* Mobile Menu Styles */
  .mobile-menu-btn {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 30px;
    height: 30px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .mobile-menu-btn span {
    width: 30px;
    height: 3px;
    background: #fff;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .mobile-menu-btn.active span:nth-child(1) {
        transform: rotate(45deg) translate(8px, 6px);
  }

  .mobile-menu-btn.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  .mobile-menu {
    display: none;
    position: fixed;
    top: 120px;
    left: 0;
    width: 100%;
    height: calc(100vh - 85px);
    background: #023c71;
    z-index: 1000;
    overflow-y: auto;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .mobile-menu.active {
    transform: translateX(0);
  }

  .mobile-nav {
    padding: 20px;
  }

  .mobile-nav a {
    display: block;
    color: #fff;
    padding: 15px 0;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    font-size: 1.2rem;
  }

  .mobile-dropdown > a {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .mobile-dropdown > a::after {
    content: "+";
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }

  .mobile-dropdown.active > a::after {
    transform: rotate(45deg);
  }

  .mobile-dropdown-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.5s ease;
    background: rgba(0, 0, 0, 0.1);
    margin-left: 15px;
    border-radius: 5px;
  }

  .mobile-dropdown.active .mobile-dropdown-content {
    max-height: 500px;
  }

  .mobile-dropdown-content a {
    padding-left: 20px;
    border-bottom: none;
    font-size: 1.1rem;
  }

  .mobile-socials {
    display: flex;
    justify-content: center;
    padding: 20px;
    margin-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  @media (orientaion: landscape) {
    .social-icon img {
        height: 30px;
    }
    .social-icon {
        margin: 0px;
    }
  }

  /* Portrait Orientation Media Query */
  @media only screen and (orientation: portrait) {
    .desktop-nav,
    .socials {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }

    .mobile-menu {
      display: block;
    }
  }
  .logo-img {
    margin-left: 15px;
  }
  

  /* Additional responsive adjustments */
  @media only screen and (max-width: 1024px) {
    .header-container {
      padding: 0 15px;
    }

    .desktop-nav {
      margin-left: 1rem;
    }

    .desktop-nav a {
      margin: 0 0.5rem;
    }
  }

  /* Content styles for demo */
  .content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
    text-align: center;
  }

  h1 {
    margin-bottom: 20px;
    color: #023c71;
  }

  p {
    line-height: 1.6;
    margin-bottom: 15px;
  }

  .orientation-notice {
    background: #ffcc00;
    color: #023c71;
    padding: 10px;
    border-radius: 5px;
    margin-top: 20px;
    display: none;
  }
.no-scroll {
  overflow: hidden;
}

  @media only screen and (orientation: portrait) {
    .orientation-notice {
      display: block;
    }
  }
</style>
<script lang="js">
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
    const mobileMenu = document.querySelector(".mobile-menu");
    const mobileDropdowns = document.querySelectorAll(".mobile-dropdown");
    const body = document.body;

    mobileMenuBtn.addEventListener("click", function () {
      mobileMenuBtn.classList.toggle("active");
      mobileMenu.classList.toggle("active");
      body.classList.toggle("no-scroll", mobileMenu.classList.contains("active"));
    });

    mobileDropdowns.forEach((dropdown) => {
      const dropdownLink = dropdown.querySelector("a");

      dropdownLink.addEventListener("click", function (e) {
        e.preventDefault();
        mobileDropdowns.forEach((otherDropdown) => {
          if (
            otherDropdown !== dropdown &&
            otherDropdown.classList.contains("active")
          ) {
            otherDropdown.classList.remove("active");
          }
        });
        dropdown.classList.toggle("active");
      });
    });

    document.querySelectorAll(".mobile-nav a").forEach((link) => {
      link.addEventListener("click", function (e) {
        if (!this.parentElement.classList.contains("mobile-dropdown")) {
          mobileMenuBtn.classList.remove("active");
          mobileMenu.classList.remove("active");
          body.classList.remove("no-scroll");
        }
      });
    });

    document.addEventListener("click", function (e) {
      if (
        !e.target.closest(".mobile-menu") &&
        !e.target.closest(".mobile-menu-btn")
      ) {
        mobileMenuBtn.classList.remove("active");
        mobileMenu.classList.remove("active");
        body.classList.remove("no-scroll");
      }
    });
  });
  document.querySelector('.mobile-menu-btn').addEventListener('click', () => {
  window.scrollTo({
    top: 0,
    behavior: 'smooth' // Optional: adds smooth scrolling
  });
});
</script>