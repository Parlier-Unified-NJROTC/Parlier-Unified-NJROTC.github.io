---
import Layout from "../../../layouts/Layout.astro";
---

<Layout title="Cadet Knowledge" disableHero>
<div class="BG555">
    <div class="container">
        <div class="section-header">
            <h1 class="section-title">Cadet Knowledge</h1>
            <p class="section-subtitle">
                "Important information needed for all your years in NJ"<br>
                Search in your cadet field manual (B.O.B.) for more information. In the 
                <a href="#PDF" class="manual-link">NJROTC Manual's</a>
            </p>
        </div>

        <div class="years-grid">
            <!-- Freshman - NS1 -->
            <div class="year-section">
                <div class="year-header freshman">
                    <h2 class="year-title">Freshman - NS1</h2>
                </div>
                <div class="material-grid">
                    <a class="study-card" href="/cadet/knowledge/orders/">
                        <div class="card-content">
                            <h3 class="card-title">General Orders</h3>
                            <p class="card-desc">"The rules you follow while being in the NJROTC"</p>
                        </div>
                    </a>
                    <a class="study-card" id="PDF" href="/cadet/manual">
                        <div class="card-content">
                            <h3 class="card-title">The NJROTC Manual's</h3>
                        </div>
                    </a>
                    <a class="study-card" href="/cadet/knowledge/chain/">
                        <div class="card-content">
                            <h3 class="card-title">Chain of Command</h3>
                            <p class="card-desc">"Who is incharge of what"</p>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Sophomore - NS2 -->
            <div class="year-section">
                <div class="year-header sophomore">
                    <h2 class="year-title">Sophomore - NS2</h2>
                </div>
                <div class="material-grid">
                    <a class="study-card" href="/cadet/knowledge/ranks/">
                        <div class="card-content">
                            <h3 class="card-title">Navy Ranks</h3>
                            <p class="card-desc">"How Knowledgable are you?"</p>
                        </div>
                    </a>
                    <a class="study-card" href="https://quizlet.com/893894016/navy-and-njrotc-ranks-flash-cards/?funnelUUID=1c12c3d0-e490-45d7-a18b-c0252f125790" target="_blank">
                        <div class="card-content">
                            <h3 class="card-title">Navy Ranks Flashcards</h3>
                            <p class="card-desc">(QUIZLET)</p>
                        </div>
                    </a>
                    <a class="study-card" href="/Resources/Tool/FlashCards/Navy/">
                        <div class="card-content">
                            <h3 class="card-title">Navy Ranks Flashcards</h3>
                            <p class="card-desc">"Study up on rank knowledge"</p>
                        </div>
                    </a>
                    <a class="study-card" href="/cadet/knowledge/alphabet/">
                        <div class="card-content">
                            <h3 class="card-title">Military Alphabet</h3>
                            <p class="card-desc">"X Y and Z now I know my ABCs."</p>
                        </div>
                    </a>
                    <a class="study-card" href="https://quizlet.com/894014603/flashcards?funnelUUID=a0228bd3-785d-46f0-b1e4-42333b3a9fa2" target="_blank">
                        <div class="card-content">
                            <h3 class="card-title">Chain of Command Flashcards</h3>
                            <p class="card-desc">(QUIZLET)</p>
                        </div>
                    </a>
                    <a class="study-card" href="/Resources/Tool/FlashCards/Chain/">
                        <div class="card-content">
                            <h3 class="card-title">Chain of Command Flashcards</h3>
                        </div>
                    </a>
                    <div class="additional-info">
                        <p>+ The NJROTC Manual's</p>
                        <p>+ AMI uniform questions</p>
                        <p>+ Chain of command</p>
                        <p>+ General orders</p>
                        <p>+ Officer Sleeves</p>
                    </div>
                </div>
            </div>

            <!-- Junior - NS3 -->
            <div class="year-section">
                <div class="year-header junior">
                    <h2 class="year-title">Junior - NS3</h2>
                </div>
                <div class="material-grid">
                    <a class="study-card" href="https://quizlet.com/notes/njrotc-uniform-regulations-d760c639-fa2f-4b83-93a7-c30bf4491f34" target="_blank">
                        <div class="card-content">
                            <h3 class="card-title">AMI Questions Flashcards</h3>
                        </div>
                    </a>
                    <a class="study-card" href="https://quizlet.com/894017921/military-alphabet-flash-cards/?new" target="_blank">
                        <div class="card-content">
                            <h3 class="card-title">Military Alphabet Flashcards</h3>
                        </div>
                    </a>
                    <div class="additional-info">
                        <p>+ The NJROTC Manual's</p>
                        <p>+ AMI questions</p>
                        <p>+ Navy Ranks</p>
                        <p>+ Military Alphabet & flags</p>
                        <p>+ AMI uniform questions</p>
                        <p>+ Chain of Command</p>
                        <p>+ General Orders</p>
                    </div>
                </div>
            </div>

            <!-- Senior - NS4 -->
            <div class="year-section">
                <div class="year-header senior">
                    <h2 class="year-title">Senior - NS4</h2>
                </div>
                <div class="material-grid">
                    <a class="study-card" href="https://www.cnn.com/world" target="_blank">
                        <div class="card-content">
                            <h3 class="card-title">Current Events</h3>
                            <p class="card-desc">Links to CNN - "All events happening here on planet earth"</p>
                        </div>
                    </a>
                    <div class="additional-info">
                        <p>+ Everything from previous years</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .BG555 {
            background: #000000;
            color: #fafaf5;
            position: relative;
            z-index: 1;
            overflow-x: hidden;
            min-height: 100vh;
        }
        
        .BG555::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgb(2 60 113 / 40%) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgb(2 60 113 / 40%) 0%, transparent 50%);
            z-index: -1;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 4rem 2rem;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }
        
        .section-title {
            font-family: "Montserrat", sans-serif;
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color: #fafaf5;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
        }
        
        .section-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: #e6b220;
            border-radius: 2px;
        }
        
        .section-subtitle {
            font-size: 1.2rem;
            color: rgba(250, 250, 245, 0.9);
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.6;
        }
        
        .manual-link {
            color: #e6b220;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        
        .manual-link:hover {
            color: #fafaf5;
            text-decoration: underline;
        }
        
        .years-grid {
            display: flex;
            flex-direction: column;
            gap: 3rem;
        }
        
        .year-section {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 16px;
            border: 1px solid rgba(2, 60, 113, 0.7);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            overflow: hidden;
            transition: all 0.4s ease;
        }
        
        .year-section:hover {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(230, 178, 32, 0.4);
            border-color: rgba(230, 178, 32, 0.6);
            background: rgba(10, 10, 15, 0.8);
            transform: translateY(-5px);
        }
        
        .year-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid rgba(2, 60, 113, 0.5);
        }
        
        .year-title {
            color: #fafaf5;
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
            position: relative;
            display: inline-block;
        }
        
        .year-title::after {
            content: "";
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 50px;
            height: 3px;
            border-radius: 2px;
        }
        
        .freshman .year-title::after {
            background: #4CAF50;
        }
        
        .sophomore .year-title::after {
            background: #2196F3;
        }
        
        .junior .year-title::after {
            background: #FF9800;
        }
        
        .senior .year-title::after {
            background: #F44336;
        }
        
        .material-grid {
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }
        
        .study-card {
            background: rgba(2, 60, 113, 0.3);
            border: 1px solid rgba(2, 60, 113, 0.5);
            border-radius: 12px;
            padding: 1.5rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            display: block;
        }
        
        .study-card:hover {
            background: rgba(2, 60, 113, 0.5);
            border-color: rgba(230, 178, 32, 0.6);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }
        
        .card-content {
            text-align: center;
        }
        
        .card-title {
            color: #e6b220;
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .card-desc {
            color: rgba(250, 250, 245, 0.8);
            font-size: 0.95rem;
            line-height: 1.4;
            margin: 0;
        }
        
        .additional-info {
            grid-column: 1 / -1;
            background: rgba(230, 178, 32, 0.1);
            border: 1px solid rgba(230, 178, 32, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 1rem;
        }
        
        .additional-info p {
            color: rgba(250, 250, 245, 0.9);
            margin: 0.5rem 0;
            font-size: 1rem;
            line-height: 1.4;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 3rem 1.5rem;
            }
            
            .section-title {
                font-size: 2.5rem;
            }
            
            .section-subtitle {
                font-size: 1.1rem;
            }
            
            .material-grid {
                grid-template-columns: 1fr;
                padding: 1.5rem;
            }
            
            .year-header {
                padding: 1.25rem 1.5rem;
            }
            
            .year-title {
                font-size: 1.5rem;
            }
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 2rem 1rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .material-grid {
                padding: 1rem;
            }
            
            .study-card {
                padding: 1.25rem;
            }
            
            .card-title {
                font-size: 1.1rem;
            }
        }
    </style>
</div>
</Layout>