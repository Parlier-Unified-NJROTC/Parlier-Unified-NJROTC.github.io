---
import DepartmentLayout from "../../layouts/DepartmentLayout.astro";

import { getCollection } from 'astro:content';
const teams = await getCollection('teams');

const {frontmatter} = Astro.props;
    
---


<!-- PLACEHOLDER FOR NOWWWWWWWWWWw -->

<DepartmentLayout>
    <section class="departments">
    <div class="departments-container">
        <div class="section-header">
            <h2 class="section-title">Our Teams</h2>
            <p class="section-subtitle">Discover our teams dedicated to excellence</p>
        </div>
        <div class="departments-grid">
            {departments.map(department => (
                <div class="department-card">
                    <a href={`/departments/${department.id}`} class="department-link">
                        <div class="card-overlay"></div>
                        <div class="department-icon" style={{ backgroundImage: `url(${department.data.img})` }}>
                            <div class="icon-overlay"></div>
                        </div>
                        <div class="department-content">
                            <div class="content-wrapper">
                                <h3 class="department-name">{department.data.name}</h3>
                                <p class="department-description">
                                    {department.data.description}
                                </p>
                                <div class="department-footer">
                                    <span class="department-button">
                                        LEARN MORE
                                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M5 12H19M19 12L12 5M19 12L12 19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            ))}
        </div>
    </div>
</section>

<style lang="less">
    /* Departments Section */
    .departments {
        padding: 6rem 2rem;
        background: #000000;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }
    
    .departments::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: 
            radial-gradient(circle at 20% 50%, rgba(2, 60, 113, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(2, 60, 113, 0.15) 0%, transparent 50%);
        z-index: -1;
    }

    .departments-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-header {
        text-align: center;
        margin-bottom: 5rem;
    }

    .section-title {
        font-family: "Montserrat", sans-serif;
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        color: #fafaf5;
        text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        position: relative;
        display: inline-block;
    }
    
    .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 4px;
        background: #e6b220;
        border-radius: 2px;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: rgba(250, 250, 245, 0.8);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .departments-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2.5rem;
        justify-items: center;
    }

    .department-card {
        background: rgba(0, 0, 0, 0.7);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.4s ease;
        position: relative;
        border: 1px solid rgba(2, 60, 113, 0.7);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 380px;
    }
    
    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(2, 60, 113, 0.3), rgba(230, 178, 32, 0.1));
        opacity: 0;
        transition: opacity 0.4s ease;
        z-index: 1;
    }

    .department-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(230, 178, 32, 0.4);
        border-color: rgba(230, 178, 32, 0.6);
        background: rgba(10, 10, 15, 0.8);
    }
    
    .department-card:hover .card-overlay {
        opacity: 1;
    }

    .department-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
        position: relative;
        z-index: 2;
    }

    .department-icon {
        height: 220px;
        background-size: cover;
        background-position: center;
        position: relative;
        overflow: hidden;
    }
    
    .icon-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(2, 60, 113, 0.7), rgba(0, 0, 0, 0.9));
        transition: transform 0.5s ease;
    }
    
    .department-card:hover .icon-overlay {
        transform: scale(1.05);
    }

    .department-content {
        padding: 2.5rem 2rem;
        position: relative;
        z-index: 2;
    }
    
    .content-wrapper {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .department-name {
        font-family: "Montserrat", sans-serif;
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #fafaf5;
        position: relative;
        padding-bottom: 0.5rem;
    }
    
    .department-name::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 3px;
        background: #e6b220;
        border-radius: 2px;
    }

    .department-description {
        font-size: 1rem;
        line-height: 1.7;
        margin-bottom: 2rem;
        color: rgba(250, 250, 245, 0.9);
        flex-grow: 1;
    }
    
    .department-footer {
        margin-top: auto;
    }

    .department-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 0.9rem 1.8rem;
        background: transparent;
        color: #e6b220;
        border: 2px solid #e6b220;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.3s ease;
        text-align: center;
        cursor: pointer;
    }
    
    .department-button svg {
        transition: transform 0.3s ease;
    }

    .department-button:hover {
        background: #e6b220;
        color: #000000;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(230, 178, 32, 0.4);
    }
    
    .department-button:hover svg {
        transform: translateX(4px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .departments {
            padding: 4rem 1.5rem;
        }
        
        .section-header {
            margin-bottom: 3rem;
        }
        
        .section-title {
            font-size: 2.5rem;
        }
        
        .section-subtitle {
            font-size: 1.1rem;
            padding: 0 1rem;
        }
        
        .departments-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        
        .department-card {
            max-width: 100%;
        }
        
        .department-content {
            padding: 2rem 1.5rem;
        }
    }
    
    @media (max-width: 480px) {
        .departments {
            padding: 3rem 1rem;
        }
        
        .section-title {
            font-size: 2rem;
        }
        
        .department-content {
            padding: 1.5rem 1.25rem;
        }
        
        .department-name {
            font-size: 1.6rem;
        }
    }
</style>
</DepartmentLayout>
