---
import { getCollection, render } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const departments = await getCollection('departments');
  return departments.map(department => ({
    params: { slug: department.id },
    props: { department },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { department } = Astro.props;
const { Content } = await render(department);

import DepartmentLayout from '../../layouts/DepartmentLayout.astro';
---

<DepartmentLayout maintain>
    <Content />
</DepartmentLayout>