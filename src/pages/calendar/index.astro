---
import Layout from "../../layouts/Layout.astro";
import Rolling from "../../components/Rolling.astro";
---

<Layout title="Parlier Unified" subtitle="NJROTC" disableHero>
<div class="BG555">
    <div class="container">
        <div class="content-wrapper">
            <!-- Calendar Section -->
            <div class="calendar-section">
                <iframe 
                    src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FLos_Angeles&showPrint=0&showTitle=0&showTabs=0&showTz=0&src=bmpyb3RjcGFybGllckBnbWFpbC5jb20&src=ZDQxZDFjMWVlMzkyZDUzOTRiNmFmNWFiY2NmMDdmMTAwYzhjYmUxNzA0NzA5MWYzZTg0Mzc3YWM3NjRkZGI5ZkBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&src=Njk5ZWMyNjYwMmYyMTViNTVlZTAzMmY0YWY5ZjcxZjUwMjM1NzU0Zjc5ZmQxYTViY2ExY2M5M2VjNjY5OTVlNEBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&color=%23039be5&color=%233f51b5&color=%23a79b8e" 
                    style="border:solid 1px #777" 
                    width="100%" 
                    height="400" 
                    frameborder="0" 
                    scrolling="no">
                </iframe>
            </div>

            <!-- Announcements Section -->
            <div class="announcements-section">
                <div class="section-header">
                    <h2 class="section-title">Announcements</h2>
                    <p class="section-subtitle">Stay updated with the latest news</p>
                </div>
                
                <div class="contact-card">
                    <div class="card-overlay"></div>
                    <div class="contact-content">
                        <div class="announcement-item">
                            <div class="megaphone-icon">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="#e6b220">
                                    <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
                                </svg>
                            </div>
                            <div class="announcement-details">
                                <div class="announcement-text">No current announcements</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .BG555 {
            background: #000000;
            color: #fafaf5;
            position: relative;
            z-index: 1;
            overflow-x: hidden;
            min-height: 100vh;
        }
        
        .BG555::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgb(2 60 113 / 40%) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgb(2 60 113 / 40%) 0%, transparent 50%);
            z-index: -1;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
            position: absolute;
            justify-self: center;
            align-self: anchor-center;
        }
        
        .content-wrapper {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: start;
        }
        
        .calendar-section iframe {
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(2, 60, 113, 0.7);
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .section-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #fafaf5;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }
        
        .section-subtitle {
            font-size: 1rem;
            color: rgba(250, 250, 245, 0.8);
            line-height: 1.6;
        }
        
        .contact-card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 16px;
            overflow: hidden;
            position: relative;
            border: 1px solid rgba(2, 60, 113, 0.7);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            transition: all 0.4s ease;
            min-height: 200px;
            display: flex;
            align-items: center;
        }
        
        .contact-card:hover {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(230, 178, 32, 0.4);
            border-color: rgba(230, 178, 32, 0.6);
            background: rgba(10, 10, 15, 0.8);
        }
        
        .card-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(2, 60, 113, 0.3), rgba(230, 178, 32, 0.1));
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: 1;
        }
        
        .contact-card:hover .card-overlay {
            opacity: 1;
        }
        
        .contact-content {
            padding: 2rem;
            position: relative;
            z-index: 2;
            width: 100%;
        }
        
        .announcement-item {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            text-align: left;
        }
        
        .megaphone-icon {
            flex-shrink: 0;
            animation: bounce 2s infinite;
        }
        
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateY(0);
            }
            40% {
                transform: translateY(-5px);
            }
            60% {
                transform: translateY(-3px);
            }
        }
        
        .announcement-details {
            flex-grow: 1;
        }
        
        .announcement-text {
            color: #fafaf5;
            font-size: 1.1rem;
            font-weight: 500;
            line-height: 1.5;
        }
        
        /* Responsive Design */
        @media (max-width: 968px) {
            .content-wrapper {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
            
            .calendar-section iframe {
                height: 350px;
            }
        }
        
        @media (max-width: 768px) {
            .container {
                padding: 2rem 1.5rem;
            }
            
            .section-title {
                font-size: 1.75rem;
            }
            
            .contact-content {
                padding: 1.5rem;
            }
            
            .announcement-item {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 1.5rem 1rem;
            }
            
            .section-title {
                font-size: 1.5rem;
            }
            
            .contact-content {
                padding: 1.25rem;
            }
            
            .megaphone-icon {
                width: 28px;
                height: 28px;
            }
            
            .announcement-text {
                font-size: 1rem;
            }
        }
    </style>
</div>
</Layout>