    <style>
        .BG555 {
            background: #000000;
            color: #fafaf5;
            position: relative;
            z-index: 1;
            overflow-x: hidden;
            min-height: 100vh;
        }
        
        .BG555::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgb(2 60 113 / 40%) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgb(2 60 113 / 40%) 0%, transparent 50%);
            z-index: -1;
