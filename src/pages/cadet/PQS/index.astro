---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="PQS - Personal Qualification Standards" disableHero>
<div class="BG555">
    <div class="container">
        <!-- Hero Section -->
        <div class="section-header">
            <h1 class="section-title">Personal Qualification Standards</h1>
            <p class="section-subtitle">Rank Advancement Requirements and Progress Tracking</p>
        </div>

        <!-- PDF Document Section -->
        <div class="pdf-section">
            <div class="pdf-card">
                <div class="pdf-header">
                    <h2 class="pdf-title">PQS Manual</h2>
                    <p class="pdf-subtitle">Official Personal Qualification Standards Document</p>
                </div>
                <div class="pdf-preview">
                    <div class="pdf-placeholder">
                        <iframe src="/PDFs/NJROTC-New-Cadet-Unit-Handbook-Draft.pdf#toolbar=0" scrolling="no" width="370px" height="200px"></iframe>
                        <div class="pdf-overlay">
                            <a class="pdf-button" target="_blank" href="/PDFs/NJROTC-New-Cadet-Unit-Handbook-Draft.pdf">Fullscreen</a>
                            <a class="pdf-button" href="/PDFs/NJROTC-New-Cadet-Unit-Handbook-Draft.pdf" download>Download</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

         <!-- Rank Advancement Progress -->
            <div class="progress-section">
                <h2 class="progress-title">Rank Advancement Progress</h2>
                <p class="progress-subtitle">Complete all requirements for your current rank to advance</p>

                <!-- Cadet Seaman Apprentice -->
                <div class="rank-card" data-rank="csa">
                    <div class="rank-header">
                        <h3 class="rank-name">Cadet Seaman Apprentice (C/SA)</h3>
                        <div class="rank-status">
                            <span class="status-badge">Current Rank</span>
                        </div>
                    </div>
                    <div class="requirements-list">
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-1" class="requirement-checkbox">
                            <label for="csa-1" class="requirement-label">
                                <span class="requirement-text">4 weeks Time In Grade (TIG) as C/SR</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-2" class="requirement-checkbox">
                            <label for="csa-2" class="requirement-label">
                                <span class="requirement-text">4 weeks Time In Program (TIP)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-3" class="requirement-checkbox">
                            <label for="csa-3" class="requirement-label">
                                <span class="requirement-text">Have all required NJROTC Program forms on file in the Admin Department</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-4" class="requirement-checkbox">
                            <label for="csa-4" class="requirement-label">
                                <span class="requirement-text">Cadet Seaman Apprentice physical fitness requirements (1 minute plank, 3 push-ups, ¼ mile in 2:30 male & 3:15 female)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-5" class="requirement-checkbox">
                            <label for="csa-5" class="requirement-label">
                                <span class="requirement-text">11 General Orders (fill in blank test)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-6" class="requirement-checkbox">
                            <label for="csa-6" class="requirement-label">
                                <span class="requirement-text">Knowledge of basic stationary drill (Entering Classroom, Dismissal, Right/Left Face, About Face, Parade Rest, Hand Salute)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csa-7" class="requirement-checkbox">
                            <label for="csa-7" class="requirement-label">
                                <span class="requirement-text">Recommended by platoon commander and approved by Cadet Advancement Review Board and/or SNIS/NSI</span>
                            </label>
                        </div>
                    </div>
                    <div class="rank-actions">
                        <button class="advance-btn" disabled>Advance to Next Rank</button>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 0%"></div>
                        </div>
                        <span class="progress-text">0% Complete</span>
                    </div>
                </div>

                <!-- Cadet Seaman -->
                <div class="rank-card hidden" data-rank="csn">
                    <div class="rank-header">
                        <h3 class="rank-name">Cadet Seaman (C/SN)</h3>
                        <div class="rank-status">
                            <span class="status-badge locked">Locked</span>
                        </div>
                    </div>
                    <div class="requirements-list">
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-1" class="requirement-checkbox" disabled>
                            <label for="csn-1" class="requirement-label">
                                <span class="requirement-text">4 weeks TIG as Cadet Seaman Apprentice</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-2" class="requirement-checkbox" disabled>
                            <label for="csn-2" class="requirement-label">
                                <span class="requirement-text">8 weeks TIP</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-3" class="requirement-checkbox" disabled>
                            <label for="csn-3" class="requirement-label">
                                <span class="requirement-text">Participated in 3 NJ events (eligible for participation ribbon)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-4" class="requirement-checkbox" disabled>
                            <label for="csn-4" class="requirement-label">
                                <span class="requirement-text">Complete 1 hour of community service</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-5" class="requirement-checkbox" disabled>
                            <label for="csn-5" class="requirement-label">
                                <span class="requirement-text">Complete the required practical factors for C/SN (1:15 plank, 8 push-ups, ½ mile in 5:15 male & 6:45 female)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-6" class="requirement-checkbox" disabled>
                            <label for="csn-6" class="requirement-label">
                                <span class="requirement-text">Knowledge of Squad drill (Open/Close Ranks, Dress Right, Cover/Uncover, Mark Time March, Left/Right Step)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-7" class="requirement-checkbox" disabled>
                            <label for="csn-7" class="requirement-label">
                                <span class="requirement-text">Knowledge of 11 general orders (tested written and verbally)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="csn-8" class="requirement-checkbox" disabled>
                            <label for="csn-8" class="requirement-label">
                                <span class="requirement-text">Recommended by platoon commander and approved by Cadet Advancement Review Board and/or SNIS/NSI</span>
                            </label>
                        </div>
                    </div>
                    <div class="rank-actions">
                        <button class="advance-btn" disabled>Advance to Next Rank</button>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 0%"></div>
                        </div>
                        <span class="progress-text">0% Complete</span>
                    </div>
                </div>

                <!-- Cadet Petty Officer 3rd Class -->
                <div class="rank-card hidden" data-rank="cpo3">
                    <div class="rank-header">
                        <h3 class="rank-name">Cadet Petty Officer 3rd Class (C/PO3)</h3>
                        <div class="rank-status">
                            <span class="status-badge locked">Locked</span>
                        </div>
                    </div>
                    <div class="requirements-list">
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-1" class="requirement-checkbox" disabled>
                            <label for="cpo3-1" class="requirement-label">
                                <span class="requirement-text">6 weeks as TIG as cadet Seaman</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-2" class="requirement-checkbox" disabled>
                            <label for="cpo3-2" class="requirement-label">
                                <span class="requirement-text">14 weeks TIP</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-3" class="requirement-checkbox" disabled>
                            <label for="cpo3-3" class="requirement-label">
                                <span class="requirement-text">Pass rank knowledge test</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-4" class="requirement-checkbox" disabled>
                            <label for="cpo3-4" class="requirement-label">
                                <span class="requirement-text">Pass Chain Of Command test</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-5" class="requirement-checkbox" disabled>
                            <label for="cpo3-5" class="requirement-label">
                                <span class="requirement-text">Pass military alphabet test</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-6" class="requirement-checkbox" disabled>
                            <label for="cpo3-6" class="requirement-label">
                                <span class="requirement-text">5 hours community service</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-7" class="requirement-checkbox" disabled>
                            <label for="cpo3-7" class="requirement-label">
                                <span class="requirement-text">6 NJ events attended</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-8" class="requirement-checkbox" disabled>
                            <label for="cpo3-8" class="requirement-label">
                                <span class="requirement-text">Proficient in basic marching drill (Left/Right Flank, To the rear, Column Left/Right, Oblique Left/Right, Extend/Close March)</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-9" class="requirement-checkbox" disabled>
                            <label for="cpo3-9" class="requirement-label">
                                <span class="requirement-text">Knowledge of AMI questions defined in the CFM & CRM</span>
                            </label>
                        </div>
                        <div class="requirement-item">
                            <input type="checkbox" id="cpo3-10" class="requirement-checkbox" disabled>
                            <label for="cpo3-10" class="requirement-label">
                                <span class="requirement-text">Recommended by platoon commander or staff and approved by Cadet Advancement Review Board and/or SNIS/NSI</span>
                            </label>
                        </div>
                    </div>
                    <div class="rank-actions">
                        <button class="advance-btn" disabled>Advance to Next Rank</button>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 0%"></div>
                        </div>
                        <span class="progress-text">0% Complete</span>
                    </div>
                </div>

                <!-- Cadet Petty Officer 2nd Class -->
                <div class="rank-card hidden" data-rank="cpo2">
                    <div class="rank-header">
                        <h3 class="rank-name">Cadet Petty Officer 2nd Class (C/PO2)</h3>
