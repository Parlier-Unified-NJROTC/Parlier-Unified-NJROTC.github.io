    <script lang="js">
        // Progress tracking functionality with localStorage
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize or load progress from localStorage
            function initializeProgress() {
                const savedProgress = localStorage.getItem('pqsProgress');
                if (savedProgress) {
                    const progressData = JSON.parse(savedProgress);
                    
                    // Restore checkbox states
                    Object.keys(progressData.checkboxes).forEach(checkboxId => {
                        const checkbox = document.getElementById(checkboxId);
                        if (checkbox) {
                            checkbox.checked = progressData.checkboxes[checkboxId];
                        }
                    });
                    
                    // Restore current rank visibility
                    if (progressData.currentRank) {
                        document.querySelectorAll('.rank-card').forEach(card => {
                            card.classList.add('hidden');
                        });
                        
                        const currentRankCard = document.querySelector(`[data-rank="${progressData.currentRank}"]`);
                        if (currentRankCard) {
                            currentRankCard.classList.remove('hidden');
                            
                            // Update status badges for all completed ranks
                            document.querySelectorAll('.rank-card').forEach(card => {
                                const rank = card.getAttribute('data-rank');
                                const badge = card.querySelector('.status-badge');
                                if (rank !== progressData.currentRank && progressData.completedRanks && progressData.completedRanks.includes(rank)) {
                                    badge.textContent = 'Completed';
                                    badge.classList.add('locked');
                                    
                                    // Enable checkboxes for completed ranks (they should remain checked)
                                    const checkboxes = card.querySelectorAll('.requirement-checkbox');
                                    checkboxes.forEach(checkbox => {
                                        checkbox.disabled = false;
                                    });
                                }
                            });
                            
                            // Update current rank badge
                            const currentBadge = currentRankCard.querySelector('.status-badge');
                            if (currentBadge) {
                                currentBadge.textContent = 'Current Rank';
                                currentBadge.classList.remove('locked');
                            }
                            
                            // Enable checkboxes for current rank
                            const currentCheckboxes = currentRankCard.querySelectorAll('.requirement-checkbox');
                            currentCheckboxes.forEach(checkbox => {
                                checkbox.disabled = false;
                            });
                        }
                    }
                }
            }

            // Save progress to localStorage
            function saveProgress() {
                const progressData = {
                    checkboxes: {},
                    currentRank: null,
                    completedRanks: []
                };
                
                // Save all checkbox states
                document.querySelectorAll('.requirement-checkbox').forEach(checkbox => {
                    progressData.checkboxes[checkbox.id] = checkbox.checked;
                });
                
                // Save current rank and completed ranks
                const rankCards = document.querySelectorAll('.rank-card');
                rankCards.forEach(card => {
                    const rank = card.getAttribute('data-rank');
                    if (!card.classList.contains('hidden')) {
                        progressData.currentRank = rank;
                    } else {
                        // Check if this rank is completed (all checkboxes checked)
                        const checkboxes = card.querySelectorAll('.requirement-checkbox');
                        const allChecked = Array.from(checkboxes).every(checkbox => checkbox.checked);
                        if (allChecked) {
                            progressData.completedRanks.push(rank);
                        }
                    }
                });
                
                localStorage.setItem('pqsProgress', JSON.stringify(progressData));
            }

            // Calculate progress for current rank
            function updateProgress() {
                const currentRankCard = document.querySelector('.rank-card:not(.hidden)');
                if (!currentRankCard) return;
                
                const checkboxes = currentRankCard.querySelectorAll('.requirement-checkbox:not(:disabled)');
                const checked = currentRankCard.querySelectorAll('.requirement-checkbox:not(:disabled):checked');
                const progress = (checked.length / checkboxes.length) * 100;
                
                const progressFill = currentRankCard.querySelector('.progress-fill');
                const progressText = currentRankCard.querySelector('.progress-text');
                
                if (progressFill && progressText) {
                    progressFill.style.width = `${progress}%`;
                    progressText.textContent = `${Math.round(progress)}% Complete`;
                }
                
                // Enable advance button if all requirements are complete
                const advanceBtn = currentRankCard.querySelector('.advance-btn');
                if (advanceBtn) {
                    if (checked.length === checkboxes.length) {
                        advanceBtn.disabled = false;
                    } else {
                        advanceBtn.disabled = true;
                    }
                }
                
                // Save progress whenever it changes
                saveProgress();
            }
            
            // Add event listeners to all checkboxes
            document.querySelectorAll('.requirement-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', updateProgress);
            });
            
            // Advance to next rank functionality
            document.querySelectorAll('.advance-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const currentRankCard = this.closest('.rank-card');
                    const nextRankCard = currentRankCard.nextElementSibling;
                    
                    if (nextRankCard && nextRankCard.classList.contains('rank-card')) {
                        currentRankCard.classList.add('hidden');
                        nextRankCard.classList.remove('hidden');
                        
                        // Update status badges
                        currentRankCard.querySelector('.status-badge').textContent = 'Completed';
                        currentRankCard.querySelector('.status-badge').classList.add('locked');
                        nextRankCard.querySelector('.status-badge').textContent = 'Current Rank';
                        nextRankCard.querySelector('.status-badge').classList.remove('locked');
                        
                        // Enable checkboxes for next rank
                        const nextCheckboxes = nextRankCard.querySelectorAll('.requirement-checkbox');
                        nextCheckboxes.forEach(checkbox => {
                            checkbox.disabled = false;
                        });
                        
                        // Reset progress for new rank and save
                        updateProgress();
                        saveProgress();
                    }
                });
            });
            
            // Initialize the progress from localStorage
            initializeProgress();
            updateProgress(); // Update progress bars after initialization
        });
    </script>
