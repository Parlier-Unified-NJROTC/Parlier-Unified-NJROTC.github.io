---
import Layout from "../../../layouts/Layout.astro";
---
<Layout title="Manual" disableHero >
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NJROTC Cadet Manuals</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Manuals Section */
        .manuals-section {
            padding: 6rem 2rem;
            background: #000000;
            position: relative;
            z-index: 1;
            overflow: hidden;
            font-family: 'Montserrat', sans-serif;
        }
        
        .manuals-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgb(2 60 113 / 40%) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgb(2 60 113 / 40%) 0%, transparent 50%);
            z-index: -1;
        }

        .manuals-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .section-title {
            font-family: "Montserrat", sans-serif;
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 1rem;
            color: #fafaf5;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            display: inline-block;
        }
        
        .section-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: #e6b220;
            border-radius: 2px;
        }

        .section-subtitle {
            font-size: 1.2rem;
            color: rgba(250, 250, 245, 0.8);
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* Manuals Navigation */
        .manuals-nav {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 4rem;
            flex-wrap: wrap;
        }
        
        .nav-link {
            padding: 0.8rem 1.5rem;
            background: rgba(2, 60, 113, 0.3);
            color: #fafaf5;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: 1px solid rgba(2, 60, 113, 0.5);
        }
        
        .nav-link:hover {
            background: rgba(230, 178, 32, 0.2);
            color: #e6b220;
            border-color: rgba(230, 178, 32, 0.5);
            transform: translateY(-2px);
        }

        /* Manuals Grid */
        .manuals-grid {
            display: flex;
            flex-direction: column;
            gap: 4rem;
        }

        .manual-category {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 16px;
            overflow: hidden;
            border: 1px solid rgba(2, 60, 113, 0.7);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            transition: all 0.4s ease;
        }
        
        .manual-category:hover {
            border-color: rgba(230, 178, 32, 0.6);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.7);
        }

        .category-header {
            padding: 2rem;
            text-align: center;
            background: rgba(2, 60, 113, 0.2);
            border-bottom: 1px solid rgba(2, 60, 113, 0.5);
        }
        
        .category-title {
            font-family: "Montserrat", sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: #fafaf5;
            margin-bottom: 0.5rem;
        }
        
        .category-subtitle {
            font-size: 1rem;
            color: rgba(250, 250, 245, 0.8);
        }

        .manuals-group {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            padding: 2rem;
        }

        .manual-card {
            background: rgba(10, 10, 15, 0.6);
            border-radius: 12px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: 1px solid rgba(2, 60, 113, 0.3);
            position: relative;
        }
        
        .manual-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.6);
            border-color: rgba(230, 178, 32, 0.4);
        }

        .manual-preview {
            height: 250px;
            overflow: hidden;
            position: relative;
            background: #1a1a1a;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .manual-preview iframe {
            width: 100%;
            height: 100%;
            border: none;
            transition: transform 0.4s ease;
        }
        
        .manual-card:hover .manual-preview iframe {
            transform: scale(1.03);
        }

        .pdf-placeholder {
            color: #e6b220;
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
            padding: 2rem;
        }

        .manual-content {
            padding: 1.5rem;
        }
        
        .manual-name {
            font-family: "Montserrat", sans-serif;
            font-size: 1.2rem;
            font-weight: 600;
            color: #fafaf5;
            margin-bottom: 1.2rem;
            line-height: 1.4;
        }

        .manual-actions {
            display: flex;
            gap: 0.8rem;
            justify-content: space-between;
        }
        
        .action-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.7rem 1.2rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            flex: 1;
            justify-content: center;
        }
        
        .action-btn.view {
            background: transparent;
            color: #e6b220;
            border: 2px solid #e6b220;
        }
        
        .action-btn.download {
            background: rgba(2, 60, 113, 0.7);
            color: #fafaf5;
            border: 2px solid rgba(2, 60, 113, 0.7);
        }
        
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
        }
        
        .action-btn.view:hover {
            background: #e6b220;
            color: #000000;
        }
        
        .action-btn.download:hover {
            background: rgba(230, 178, 32, 0.9);
            color: #000000;
            border-color: rgba(230, 178, 32, 0.9);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .manuals-section {
                padding: 4rem 1.5rem;
            }
            
            .section-header {
                margin-bottom: 2rem;
            }
            
            .section-title {
                font-size: 2.5rem;
            }
            
            .section-subtitle {
                font-size: 1.1rem;
                padding: 0 1rem;
            }
            
            .manuals-nav {
                margin-bottom: 3rem;
                gap: 0.5rem;
            }
            
            .nav-link {
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }
            
            .manuals-group {
                grid-template-columns: 1fr;
                padding: 1.5rem;
                gap: 1.5rem;
            }
            
            .category-header {
                padding: 1.5rem;
            }
            
            .category-title {
                font-size: 1.5rem;
            }
            
            .manual-actions {
                flex-direction: column;
            }
        }
        
        @media (max-width: 480px) {
            .manuals-section {
                padding: 3rem 1rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .manuals-nav {
                margin-bottom: 2rem;
            }
            
            .manuals-group {
                padding: 1rem;
            }
            
            .manual-content {
                padding: 1.2rem;
            }
            
            .manual-name {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    
</Layout>