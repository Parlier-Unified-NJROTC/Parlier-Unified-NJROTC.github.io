---
import Layout from "../../../../../layouts/Layout.astro";
---

<Layout title="AMI Questions" disableHero>
    <section class="flashcard-section">
        <div id="FlashCard-BG">
            <div class="card-counter" id="cardCounter">Card 1 of 15</div>

            <div class="container444">
                <div class="flashcard">
                    <div class="front"></div>
                    <div class="back" style="transform: rotateX(180deg);"></div>
                </div>
            </div>

            <div class="progress-bar">
                <div class="progress"></div>
            </div>

            <div class="navigation">
                <button onclick="prevCard()">Previous</button>
                <button onclick="scrambleCards()">Scramble</button>
                <button onclick="nextCard()">Next</button>
            </div>
        </div>
    </section>
    <style>
        /* Flashcard Section */
        .flashcard-section {
            padding: 6rem 2rem;
            background: #000000;
            position: relative;
            z-index: 1;
            overflow: hidden;
            font-family: "Montserrat", sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .flashcard-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(
                    circle at 20% 50%,
                    rgb(2 60 113 / 40%) 0%,
                    transparent 50%
                ),
                radial-gradient(
                    circle at 80% 20%,
                    rgb(2 60 113 / 40%) 0%,
                    transparent 50%
                );
            z-index: -1;
        }

        #FlashCard-BG {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .container444 {
            position: relative;
            width: 600px;
            height: 400px;
            margin: 2rem 0;
            perspective: 1000px;
        }

        .flashcard {
            width: 100%;
            height: 100%;
            position: absolute;
            transform-style: preserve-3d;
            transition: all 0.6s ease;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Montserrat", sans-serif;
        }

        .flashcard.flipped {
            transform: rotateX(180deg);
        }

        .front,
        .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            text-align: center;
            color: #fafaf5;
            border: 1px solid rgba(2, 60, 113, 0.7);
            transition: all 0.3s ease;
        }

        .front {
            background: rgba(10, 10, 15, 0.9);
            background: linear-gradient(
                135deg,
                rgba(2, 60, 113, 0.2),
                rgba(10, 10, 15, 0.9)
            );
        }

        .front::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                45deg,
                rgba(2, 60, 113, 0.3),
                rgba(230, 178, 32, 0.1)
            );
            border-radius: 16px;
            opacity: 0.5;
        }

        .back {
            background: rgba(15, 15, 20, 0.9);
            background: linear-gradient(
                135deg,
                rgba(230, 178, 32, 0.1),
                rgba(15, 15, 20, 0.9)
            );
            transform: rotateX(180deg);
            font-size: 1.6rem;
            line-height: 1.4;
        }

        .back::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                45deg,
                rgba(230, 178, 32, 0.2),
                rgba(2, 60, 113, 0.1)
            );
            border-radius: 16px;
            opacity: 0.5;
        }

        .progress-bar {
            width: 600px;
            height: 8px;
            background-color: rgba(2, 60, 113, 0.3);
            margin: 3rem 0 2rem 0;
            border-radius: 4px;
            border: 1px solid rgba(2, 60, 113, 0.5);
            overflow: hidden;
        }

        .progress {
            height: 100%;
            background: linear-gradient(90deg, #e6b220, #023c71);
            border-radius: 4px;
            transition: width 0.3s cubic-bezier(0.05, 0.67, 0.45, 1.46);
            box-shadow: 0 0 10px rgba(230, 178, 32, 0.3);
        }

        .navigation {
            margin-top: 2rem;
            display: flex;
            gap: 1.5rem;
        }

        button {
            padding: 1rem 2rem;
            background: transparent;
            color: #e6b220;
            border: 2px solid #e6b220;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 600;
            font-family: "Montserrat", sans-serif;
            transition: all 0.3s ease;
            min-width: 120px;
        }

        button:hover {
            background: #e6b220;
            color: #000000;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(230, 178, 32, 0.4);
        }

        /* Card counter */
        .card-counter {
            color: rgba(250, 250, 245, 0.8);
            font-size: 1rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        /* Instructions */
        .instructions {
            color: rgba(250, 250, 245, 0.7);
            font-size: 0.9rem;
            margin-top: 1.5rem;
            text-align: center;
            max-width: 500px;
            line-height: 1.5;
        }

        @media (max-width: 768px) {
            .flashcard-section {
                padding: 4rem 1.5rem;
            }

            .container444 {
                width: 90%;
                height: 350px;
            }

            .progress-bar {
                width: 90%;
            }

            .front,
            .back {
                font-size: 1.6rem;
                padding: 1.5rem;
            }

            .back {
                font-size: 1.3rem;
            }

            .navigation {
                flex-wrap: wrap;
                justify-content: center;
            }

            button {
                padding: 0.8rem 1.5rem;
                min-width: 100px;
            }
        }

        @media (max-width: 480px) {
            .flashcard-section {
                padding: 3rem 1rem;
            }

            .container444 {
                height: 300px;
            }

            .front,
            .back {
                font-size: 1.4rem;
                padding: 1rem;
            }

            .back {
                font-size: 1.1rem;
            }

            .navigation {
                gap: 1rem;
            }

            button {
                padding: 0.7rem 1.2rem;
                font-size: 0.9rem;
            }
        }
    </style>
    <script lang="js">
        const flashcards = [
            { front: "What does 'NJROTC' stand for?", back: "Naval Junior Reserve Officers Training Corps" },
        { front: "What are the three Core values of Navy JROTC?", back: "Honor/Courage/Commitment" },
        { front: "What is the maximum distance your hair may reach away from your scalp?", back: "Maximum 'bulk' or 'height' of hair away from the scalp is 2', males & females" },
        { front: "What is the regulation about wearing a necklace in an NJROTC uniform?", back: "You can, but it shall not be visible" },
        { front: "Describe the correct placement of ribbons and name tags on NJROTC uniforms.", back: "MALE: Ribbons and name tags are worn parallel to the top of the shirt pocket, ¼' above and centered on the pocket. The name tag is on the right, and the ribbons are on the left. FEMALE: Centered horizontally over the front seams, 6-¼' down from the intersection of the shoulder and front seam of the blouse to the bottom of the lowest row of ribbons or bottom of the name tag. The name tag is on the right, and the ribbons are on the left." },
        { front: "Describe the placement of the small fouled anchor worn on the garrison cap.", back: "The anchor is worn on the wearer's left side of the cap. The center of the anchor is bisected by a vertical line 2' from the fore crease of the garrison cap and a horizontal line 1-1/2' from the bottom edge of the cap." },
        { front: "What are the three items depicted on the NJROTC patch?", back: "A ship, an anchor, and an eagle." },
        { front: "Many uniforms authorize wearing aiguillettes – what is the maximum number of aiguillettes that can be worn on an NJROTC uniform?", back: "TWO, with no more than ONE on each shoulder." },
        { front: "Name the highest ribbon award any NJROTC cadet may receive.", back: "The Meritorious Achievement Ribbon." },
        { front: "What is the lowest rank for enlisted NJROTC cadets?", back: "Cadet Seaman Recruit" },
        { front: "What rank is an NJROTC cadet wearing a collar device of a perched eagle over three chevrons?", back: "Cadet Petty Officer First Class" },
        { front: "Q1What is the rank for an NJROTC cadet wearing a collar device of 3 silver diagonal stripes?", back: "Cadet Seaman" },
        { front: "What is the highest attainable Navy rank for an enlisted NJROTC cadet?", back: "Cadet Master Chief Petty Officer" },
        { front: "What is the lowest rank for a cadet officer in NJROTC?", back: "Cadet Ensign" },
        { front: "What is the collar insignia for NJROTC cadets holding the rank of Cadet Lieutenant?", back: "The collar device has three attached gold bars" },
        { front: "What is the collar insignia for NJROTC cadets with the rank of Cadet Lieutenant (Junior Grade)?", back: "The collar device has two attached gold bars" },
        { front: "What is the rank of an NJROTC cadet wearing a collar device with four attached gold bars?", back: "Cadet Lieutenant Commander" },
        { front: "What are the four types of commands?", back: "1) Preparatory command; 2) Command of execution; 3) Supplementary command; 4) Combined command" },
        { front: "What are four items that must be studied & practiced to develop an effective command voice?", back: "1) Loudness and projection; 2) distinction or clarity; 3) inflection; 4) cadence" },
        { front: "What is meant when it is said that a command voice has a 'good inflection'?", back: "A voice with a good rise and fall in pitch & tone has plenty of snap." },
        { front: "What is the correct cadence while marching at Quick Time?", back: "120 steps per minute." },
        { front: "What is the correct cadence while marching at Double Time?", back: "180 steps per minute." },
        { front: "How many inches is the correct length of a step at Quick Time?", back: "30-inch, from heal to heal." },
        { front: "How many inches is the correct length of a step at Double Time?", back: "36-inch." },
        { front: "What specific command or phrase cancels a movement or order?", back: "As you were" },
        { front: "What angle will an unarmed cadet at the position of Attention have feet forming?", back: "45 degrees." },
        { front: "An unarmed cadet at the position of Attention will have thumbs placed where?", back: "Along the trouser seams." },
        { front: "To attain the correct position of Parade Rest, what do you do with your left foot?", back: "Move the left foot smartly 12' to the left." },
        { front: "At the position of Parade Rest or Ease, what is the only command that can be given?", back: "Attention." },
        { front: "How many counts are involved in all facing movements?", back: "Two counts." },
        { front: "When executing a proper NJROTC salute, where is the position of the forefinger?", back: "The tip of the forefinger touches the lower part of the headdress above and slightly to the right of the right eye." },
        { front: "Why is the National Ensign flown at half-staff on some occasions?", back: "To honor and pay respect to deceased persons of national importance." },
        { front: "What are the words to the Pledge of Allegiance?", back: "I pledge allegiance to the flag of the United States of America and to the republic for which it stands, one nation under God, indivisible, with liberty and justice for all." },
        { front: "The grommet on the chin strap", back: "The grommet on the chin strap is placed on my left." },
        { front: "Anchor on a garrison cover", back: "Sir, the anchor on a garrison cap is worn one and ½ inches above the bottom edge and 2 inches from the fore crease on the left side." },
        { front: "CPO and above rank on garrison covers", back: "The rank insignia on a garrison cap is worn one and ½ inches above the bottom edge and 2 inches from the fore crease on the right side." },
        { front: "Shoe Laces", back: "Shoelaces are right over left as you look at them; no bridges" },
        { front: "Gig Line", back: "The gig line is the alignment of the outside edge of the shirt, pants, and belt buckle." },
        { front: "Fingernails (female)", back: "The fingernails can be a maximum of ¼ inch from the fingertip, natural colors only." },
        { front: "Fingernails (male)", back: "The fingernails cannot extend beyond the fingertip." },
        { front: "Male sideburns Length", back: "Shall not extend below the middle of the ear" },
        { front: "Male Hair", back: "Must be tapered upwards around the ears and neck, must not touch the collar, maximum length 4 inches" },
        { front: "Female Hair Length", back: "May touch, but not be below the lower edge of the back of the collar" },
        { front: "Female Ear Rings", back: "One per ear, centered on the earlobe, small gold or silver ball" },
        { front: "Male Ear Rings", back: "Not authorized" },
        { front: "Rings", back: "One per hand, plus an engagement ring" }
];

        let currentFlashcards = [...flashcards];
        let currentCardIndex = 0;
        let isCooldown = false;
        const container444 = document.querySelector(".container444");
        const progress = document.querySelector(".progress");
        const flashcard = document.querySelector(".flashcard");
        const cardCounter = document.getElementById("cardCounter");

        function updateProgress() {
            const progressWidth =
                ((currentCardIndex + 1) / currentFlashcards.length) * 100;
            progress.style.width = `${progressWidth}%`;
            cardCounter.textContent = `Card ${currentCardIndex + 1} of ${currentFlashcards.length}`;
        }

        function updateCard() {
            flashcard.classList.remove("flipped");
            setTimeout(() => {
                const card = currentFlashcards[currentCardIndex];
                container444.querySelector(".front").textContent = card.front;
                container444.querySelector(".back").textContent = card.back;
                updateProgress();
            }, 150);
        }

        function flipCard() {
            flashcard.classList.toggle("flipped");
        }

        function scrambleCards() {
            const shuffled = [...flashcards];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            currentFlashcards = shuffled;
            currentCardIndex = 0;
            updateCard();
        }

        function nextCard() {
            if (currentCardIndex < currentFlashcards.length - 1) {
                currentCardIndex++;
                updateCard();
            }
        }

        function prevCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCard();
            }
        }

        document.addEventListener("keydown", (e) => {
            if (e.code === "Space" && !isCooldown) {
                flipCard();
                isCooldown = true;
                setTimeout(() => {
                    isCooldown = false;
                }, 600);
            } else if (e.key === "ArrowRight") {
                nextCard();
            } else if (e.key === "ArrowLeft") {
                prevCard();
            }
        });

        flashcard.addEventListener("click", flipCard);
        updateProgress();
        updateCard();

        window.addEventListener("keydown", function (e) {
            if (e.keyCode == 32 && e.target == document.body) {
                e.preventDefault();
            }
        });
    </script>
</Layout>
