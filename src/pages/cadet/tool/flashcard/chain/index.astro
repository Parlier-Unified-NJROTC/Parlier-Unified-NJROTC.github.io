---
import Layout from "../../../../../layouts/Layout.astro";
---
<Layout title="Tools" disableHero >
    <section class="flashcard-section">
        <div id="FlashCard-BG">
            <div class="card-counter" id="cardCounter">Card 1 of 15</div>
            
            <div class="container444">
                <div class="flashcard">
                    <div class="front"></div>
                    <div class="back" style="transform: rotateX(180deg);"></div>
                </div>
            </div>
            
            <div class="progress-bar">
                <div class="progress"></div>
            </div>
            
            <div class="navigation">
                <button onclick="prevCard()">Previous</button>
                <button onclick="scrambleCards()">Scramble</button>
                <button onclick="nextCard()">Next</button>
            </div>
            
        </div>
    </section>
<style>
        /* Flashcard Section */
        .flashcard-section {
            padding: 6rem 2rem;
            background: #000000;
            position: relative;
            z-index: 1;
            overflow: hidden;
            font-family: 'Montserrat', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        
        .flashcard-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(circle at 20% 50%, rgb(2 60 113 / 40%) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgb(2 60 113 / 40%) 0%, transparent 50%);
            z-index: -1;
        }

        #FlashCard-BG {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .container444 {
            position: relative;
            width: 600px;
            height: 400px;
            margin: 2rem 0;
            perspective: 1000px;
        }

        .flashcard {
            width: 100%;
            height: 100%;
            position: absolute;
            transform-style: preserve-3d;
            transition: all 0.6s ease;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: "Montserrat", sans-serif;
        }

        .flashcard.flipped {
            transform: rotateX(180deg);
        }

        .front,
        .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
            text-align: center;
            color: #fafaf5;
            border: 1px solid rgba(2, 60, 113, 0.7);
            transition: all 0.3s ease;
        }

        .front {
            background: rgba(10, 10, 15, 0.9);
            background: linear-gradient(135deg, rgba(2, 60, 113, 0.2), rgba(10, 10, 15, 0.9));
        }

        .front::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(2, 60, 113, 0.3), rgba(230, 178, 32, 0.1));
            border-radius: 16px;
            opacity: 0.5;
        }

        .back {
            background: rgba(15, 15, 20, 0.9);
            background: linear-gradient(135deg, rgba(230, 178, 32, 0.1), rgba(15, 15, 20, 0.9));
            transform: rotateX(180deg);
            font-size: 1.6rem;
            line-height: 1.4;
        }

        .back::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(230, 178, 32, 0.2), rgba(2, 60, 113, 0.1));
            border-radius: 16px;
            opacity: 0.5;
        }

        .progress-bar {
            width: 600px;
            height: 8px;
            background-color: rgba(2, 60, 113, 0.3);
            margin: 3rem 0 2rem 0;
            border-radius: 4px;
            border: 1px solid rgba(2, 60, 113, 0.5);
            overflow: hidden;
        }

        .progress {
            height: 100%;
            background: linear-gradient(90deg, #e6b220, #023c71);
            border-radius: 4px;
            transition: width 0.3s cubic-bezier(0.05, 0.67, 0.45, 1.46);
            box-shadow: 0 0 10px rgba(230, 178, 32, 0.3);
        }

        .navigation {
            margin-top: 2rem;
            display: flex;
            gap: 1.5rem;
        }

        button {
            padding: 1rem 2rem;
            background: transparent;
            color: #e6b220;
            border: 2px solid #e6b220;
            border-radius: 50px;
            cursor: pointer;
            font-weight: 600;
            font-family: "Montserrat", sans-serif;
            transition: all 0.3s ease;
            min-width: 120px;
        }

        button:hover {
            background: #e6b220;
            color: #000000;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(230, 178, 32, 0.4);
        }

        /* Card counter */
        .card-counter {
            color: rgba(250, 250, 245, 0.8);
            font-size: 1rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        /* Instructions */
        .instructions {
            color: rgba(250, 250, 245, 0.7);
            font-size: 0.9rem;
            margin-top: 1.5rem;
            text-align: center;
            max-width: 500px;
            line-height: 1.5;
        }

        @media (max-width: 768px) {
            .flashcard-section {
                padding: 4rem 1.5rem;
            }
            
            .container444 {
                width: 90%;
                height: 350px;
            }
            
            .progress-bar {
                width: 90%;
            }
            
            .front,
            .back {
                font-size: 1.6rem;
                padding: 1.5rem;
            }
            
            .back {
                font-size: 1.3rem;
            }
            
            .navigation {
                flex-wrap: wrap;
                justify-content: center;
            }
            
            button {
                padding: 0.8rem 1.5rem;
                min-width: 100px;
            }
        }

        @media (max-width: 480px) {
            .flashcard-section {
                padding: 3rem 1rem;
            }
            
            .container444 {
                height: 300px;
            }
            
            .front,
            .back {
                font-size: 1.4rem;
                padding: 1rem;
            }
            
            .back {
                font-size: 1.1rem;
            }
            
            .navigation {
                gap: 1rem;
            }
            
            button {
                padding: 0.7rem 1.2rem;
                font-size: 0.9rem;
            }
        }
    </style>
    <script lang="js">
        const flashcards = [
            { front: "Commander in Chief", back: "President Donald Trump" },
            { front: "Vice President", back: "James David Vance" },
            { front: "Speaker of the House", back: "Speaker Mike Johnson" },
            { front: "Secretary of State", back: "Marco Rubio" },
            { front: "Secretary of Defense", back: "Honorable Pete Hegseth" },
            { front: "Secretary of the Navy", back: "Honorable John Phelan" },
            { front: "Chief of Naval Operations", back: "Admiral James Kilby" },
            { front: "Master Chief Petty Officer of the Navy", back: "James M. Honea" },
            { front: "Naval Education and Training Commander", back: "Rear Admiral Jeffrey Czerewko" },
            { front: "Naval Service Training Commander", back: "Rear Adm. Matthew T. Pottenburgh" },
            { front: "Director of NJROTC", back: "Mr. Bruce Nolan" },
            { front: "Area 22 Service Manager", back: "Master Chief Ken Ballard" },
            { front: "Naval Science Instructor", back: "Chief Killian" },
            { front: "Unit Cadet Commanding Officer (CO)", back: "Cadet LT Jesus Cruz" },
            { front: "Unit Cadet Executive Officer (XO)", back: "Cadet Chief Villanueva" },
        ];

        let currentFlashcards = [...flashcards];
        let currentCardIndex = 0;
        let isCooldown = false;
        const container444 = document.querySelector(".container444");
        const progress = document.querySelector(".progress");
        const flashcard = document.querySelector(".flashcard");
        const cardCounter = document.getElementById("cardCounter");

        function updateProgress() {
            const progressWidth = ((currentCardIndex + 1) / currentFlashcards.length) * 100;
            progress.style.width = `${progressWidth}%`;
            cardCounter.textContent = `Card ${currentCardIndex + 1} of ${currentFlashcards.length}`;
        }

        function updateCard() {
            flashcard.classList.remove("flipped");
            setTimeout(() => {
                const card = currentFlashcards[currentCardIndex];
                container444.querySelector(".front").textContent = card.front;
                container444.querySelector(".back").textContent = card.back;
                updateProgress();
            }, 150);
        }

        function flipCard() {
            flashcard.classList.toggle("flipped");
        }

        function scrambleCards() {
            const shuffled = [...flashcards];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            currentFlashcards = shuffled;
            currentCardIndex = 0;
            updateCard();
        }

        function nextCard() {
            if (currentCardIndex < currentFlashcards.length - 1) {
                currentCardIndex++;
                updateCard();
            }
        }

        function prevCard() {
            if (currentCardIndex > 0) {
                currentCardIndex--;
                updateCard();
            }
        }

        document.addEventListener("keydown", (e) => {
            if (e.code === "Space" && !isCooldown) {
                flipCard();
                isCooldown = true;
                setTimeout(() => {
                    isCooldown = false;
                }, 600);
            } else if (e.key === "ArrowRight") {
                nextCard();
            } else if (e.key === "ArrowLeft") {
                prevCard();
            }
        });

        flashcard.addEventListener("click", flipCard);
        updateProgress();
        updateCard();
        
        window.addEventListener('keydown', function(e) {
            if(e.keyCode == 32 && e.target == document.body) {
                e.preventDefault();
            }
        });
    </script>
</Layout>