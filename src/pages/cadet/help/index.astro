---
// src/pages/cadet/help/index.astro
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Cadet Help Center">
    <div class="flashcard-section">
        <div id="FlashCard-BG">
            <div class="container">
                <!-- Exit Warning Modal -->
                <div id="exit-warning" class="exit-modal">
                    <div class="exit-modal-content">
                        <div class="warning-icon">⚠️</div>
                        <h3>Leaving Secure Site</h3>
                        <p>You are about to leave the official website. External links may not follow the same security protocols.</p>
                        <div class="button-group">
                            <button id="cancel-exit" class="exit-btn cancel-btn">Stay Here</button>
                            <button id="confirm-exit" class="exit-btn confirm-btn">Continue Anyway</button>
                        </div>
                    </div>
                </div>
                
                <h1 style="text-align: center; color: #e6b220; margin-bottom: 40px;">Cadet Help Center</h1>
                
                <!-- Google-style Tab Container -->
                <div class="tab-container">
                    <div class="tab-scroll-container">
                        <div class="tab-headers">
                            <button class="tab-header active" data-tab="signup">
                                <span class="material-icons tab-icon">person_add</span>
                                Signup Form
                            </button>
                            <button class="tab-header" data-tab="suggestion">
                                <span class="material-icons tab-icon">lightbulb</span>
                                Suggestion Box
                            </button>
                        </div>
                        <div class="tab-indicator" id="tabIndicator"></div>
                    </div>
                    
                    <div class="tab-contents">
                        <!-- Signup Form -->
                        <div class="tab-content active" id="signup-content">
                            <h2>NJROTC Program Signup</h2>
                            <form id="signupForm">
                                <div class="form-group">
                                    <label for="fullName">Full Name *</label>
                                    <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Enter your full name" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="schoolId">School ID *</label>
                                    <input type="text" id="schoolId" name="schoolId" class="form-control" placeholder="Enter your school ID" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="grade">Grade Level *</label>
                                    <select id="grade" name="grade" class="form-control" required>
                                        <option value="">Select Grade</option>
                                        <option value="9">9th Grade</option>
                                        <option value="10">10th Grade</option>
                                        <option value="11">11th Grade</option>
                                        <option value="12">12th Grade</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label for="email">Email Address *</label>
                                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="program">Program Interest</label>
                                    <select id="program" name="program" class="form-control">
                                        <option value="">Select Program</option>
                                        <option value="leadership">Leadership Program</option>
                                        <option value="drill">Drill Team</option>
                                        <option value="rifle">Rifle Team</option>
                                        <option value="academic">Academic Team</option>
                                        <option value="color_guard">Color Guard</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                
                                <div class="status-message" id="signupStatus"></div>
                                
                                <button type="submit" class="submit-btn" id="signupSubmit">
                                    <span id="signupBtnText">Submit Signup</span>
                                    <div class="loading" id="signupLoading" style="display: none;"></div>
                                </button>
                            </form>
                        </div>
                        
                        <!-- Suggestion Form -->
                        <div class="tab-content" id="suggestion-content">
                            <h2>Suggestion Box</h2>
                            <form id="suggestionForm">
                                <div class="form-group">
                                    <label for="suggFullName">Full Name *</label>
                                    <input type="text" id="suggFullName" name="fullName" class="form-control" placeholder="Enter your full name" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="suggSchoolId">School ID *</label>
                                    <input type="text" id="suggSchoolId" name="schoolId" class="form-control" placeholder="Enter your school ID" required>
                                </div>
                                
                                <div class="form-group">
                                    <label for="suggGrade">Grade Level *</label>
                                    <select id="suggGrade" name="grade" class="form-control" required>
                                        <option value="">Select Grade</option>
                                        <option value="9">9th Grade</option>
                                        <option value="10">10th Grade</option>
                                        <option value="11">11th Grade</option>
                                        <option value="12">12th Grade</option>
                                        <option value="faculty">Faculty/Staff</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label for="suggestionType">Suggestion Type *</label>
                                    <select id="suggestionType" name="type" class="form-control" required>
                                        <option value="">Select Type</option>
                                        <option value="improvement">NJROTC Improvement</option>
                                        <option value="event">Event Idea</option>
                                        <option value="uniform">Uniform/Fitting</option>
                                        <option value="training">Training Suggestion</option>
                                        <option value="safety">Safety Concern</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                
                                <div class="form-group">
                                    <label for="suggestionText">Your Suggestion *</label>
                                    <textarea id="suggestionText" name="suggestion" class="form-control" placeholder="Please describe your suggestion in detail..." required></textarea>
                                </div>
                                
                                <div class="status-message" id="suggestionStatus"></div>
                                
                                <button type="submit" class="submit-btn" id="suggestionSubmit">
                                    <span id="suggestionBtnText">Submit Suggestion</span>
                                    <div class="loading" id="suggestionLoading" style="display: none;"></div>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <style>
        /* Your existing CSS styles here */
        /* Make sure all your CSS from before is included */
    </style>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log('Page loaded, initializing forms...');
        
        // Tab switching code (keep your existing tab code)
        const tabHeaders = document.querySelectorAll('.tab-header');
        const tabContents = document.querySelectorAll('.tab-content');
        const tabIndicator = document.getElementById('tabIndicator');
        const tabHeadersContainer = document.querySelector('.tab-headers');
        
        // Tab Switching Function
        function switchTab(tabName) {
            // Update URL hash
            window.location.hash = tabName;
            
            // Update active tab header
            tabHeaders.forEach(header => {
                if (header.dataset.tab === tabName) {
                    header.classList.add('active');
                } else {
                    header.classList.remove('active');
                }
            });
            
            // Update active tab content
            tabContents.forEach(content => {
                if (content.id === `${tabName}-content`) {
                    content.classList.add('active');
                } else {
                    content.classList.remove('active');
                }
            });
        }
        
        // Tab header click events
        tabHeaders.forEach(header => {
            header.addEventListener('click', function() {
                const tabName = this.dataset.tab;
                switchTab(tabName);
            });
        });
        
        // Check URL hash on load
        function checkHash() {
            const hash = window.location.hash.substring(1).toLowerCase();
            if (hash === 'suggestion') {
                switchTab('suggestion');
            } else if (hash === 'signup') {
                switchTab('signup');
            } else {
                switchTab('signup');
            }
        }
        
        checkHash();
        window.addEventListener('hashchange', checkHash);
        
        // ============ FORM SUBMISSION ============
        console.log('Setting up form submissions...');
        
        // Get form elements
        const signupForm = document.getElementById('signupForm');
        const suggestionForm = document.getElementById('suggestionForm');
        
        if (!signupForm) console.error('Signup form not found!');
        if (!suggestionForm) console.error('Suggestion form not found!');
        
        // Test API endpoint first
        async function testAPI() {
            try {
                const response = await fetch('/api/signup', { method: 'POST' });
                console.log('API test response status:', response.status);
                return response.status !== 404;
            } catch (error) {
                console.warn('API test failed:', error.message);
                return false;
            }
        }
        
        // Signup Form Submission
        signupForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            console.log('Signup form submitted');
            
            const submitBtn = document.getElementById('signupSubmit');
            const btnText = document.getElementById('signupBtnText');
            const loading = document.getElementById('signupLoading');
            const status = document.getElementById('signupStatus');
            
            // Show loading
            btnText.style.display = 'none';
            loading.style.display = 'inline-block';
            submitBtn.disabled = true;
            status.style.display = 'none';
            
            try {
                // Get form data
                const formData = {
                    fullName: document.getElementById('fullName').value.trim(),
                    schoolId: document.getElementById('schoolId').value.trim(),
                    grade: document.getElementById('grade').value,
                    email: document.getElementById('email').value.trim(),
                    program: document.getElementById('program').value
                };
                
                console.log('Submitting signup:', formData);
                
                // Send to Vercel serverless function
                const response = await fetch('/api/signup', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                console.log('Response status:', response.status);
                
                // Check if response is JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('Non-JSON response:', text.substring(0, 100));
                    throw new Error('Server returned non-JSON response');
                }
                
                const result = await response.json();
                console.log('Server response:', result);
                
                if (response.ok) {
                    status.className = 'status-message success';
                    status.innerHTML = '✅ Signup submitted successfully! Confirmation email sent.';
                    status.style.display = 'block';
                    
                    // Reset form after 2 seconds
                    setTimeout(() => {
                        signupForm.reset();
                    }, 2000);
                } else {
                    throw new Error(result.error || 'Submission failed');
                }
                
            } catch (error) {
                console.error('Submission error:', error);
                status.className = 'status-message error';
                status.innerHTML = `❌ Error: ${error.message}`;
                status.style.display = 'block';
            } finally {
                // Hide loading
                btnText.style.display = 'inline';
                loading.style.display = 'none';
                submitBtn.disabled = false;
                
                // Scroll to status message
                setTimeout(() => {
                    status.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });
        
        // Suggestion Form Submission
        suggestionForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            console.log('Suggestion form submitted');
            
            const submitBtn = document.getElementById('suggestionSubmit');
            const btnText = document.getElementById('suggestionBtnText');
            const loading = document.getElementById('suggestionLoading');
            const status = document.getElementById('suggestionStatus');
            
            // Show loading
            btnText.style.display = 'none';
            loading.style.display = 'inline-block';
            submitBtn.disabled = true;
            status.style.display = 'none';
            
            try {
                // Get form data
                const formData = {
                    fullName: document.getElementById('suggFullName').value.trim(),
                    schoolId: document.getElementById('suggSchoolId').value.trim(),
                    grade: document.getElementById('suggGrade').value,
                    suggestionType: document.getElementById('suggestionType').value,
                    suggestionText: document.getElementById('suggestionText').value.trim()
                };
                
                console.log('Submitting suggestion:', { 
                    ...formData, 
                    suggestionTextPreview: formData.suggestionText.substring(0, 50) + '...' 
                });
                
                // Send to Vercel serverless function
                const response = await fetch('/api/suggestion', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });
                
                console.log('Response status:', response.status);
                
                // Check if response is JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('Non-JSON response:', text.substring(0, 100));
                    throw new Error('Server returned non-JSON response');
                }
                
                const result = await response.json();
                console.log('Server response:', result);
                
                if (response.ok) {
                    status.className = 'status-message success';
                    status.innerHTML = '✅ Suggestion submitted successfully! Thank you for your feedback.';
                    status.style.display = 'block';
                    
                    // Reset form after 2 seconds
                    setTimeout(() => {
                        suggestionForm.reset();
                    }, 2000);
                } else {
                    throw new Error(result.error || 'Submission failed');
                }
                
            } catch (error) {
                console.error('Submission error:', error);
                status.className = 'status-message error';
                status.innerHTML = `❌ Error: ${error.message}`;
                status.style.display = 'block';
            } finally {
                // Hide loading
                btnText.style.display = 'inline';
                loading.style.display = 'none';
                submitBtn.disabled = false;
                
                // Scroll to status message
                setTimeout(() => {
                    status.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });
        
        console.log('Forms initialized successfully');
        
        // Test API on load
        testAPI().then(apiAvailable => {
            if (apiAvailable) {
                console.log('✅ API endpoints are available');
            } else {
                console.warn('⚠️ API endpoints may not be available');
                document.getElementById('signupStatus').innerHTML = 
                    '⚠️ API endpoint not available. Make sure server is running.';
                document.getElementById('signupStatus').style.display = 'block';
            }
        });
    });
    </script>
</Layout>