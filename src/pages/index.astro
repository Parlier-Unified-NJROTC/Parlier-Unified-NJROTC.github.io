---
import Layout from '../layouts/Layout.astro';
import Rolling from '../components/Rolling.astro';
---

<Layout title='Parlier Unified' subtitle="NJROTC">
<Rolling></Rolling>
<span class="Links">
    <div class="Photo">
        <img src="/Photo/IMG_3.jpeg" alt="Colorguard 1" >
        <h3>Parents</h3>
    </div>
    <div class="Photo">
        <img src="/Photo/IMG_1.jpeg" alt="Colorguard 1" >
        <h3>Cadets</h3>
    </div>
    <div class="Photo" style="color: white;">
        <img src="/Photo/IMG_2.jpeg" alt="Colorguard 1" >
