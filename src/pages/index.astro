---
import Layout from "../layouts/Layout.astro";
import Rolling from "../components/Rolling.astro";
---

<Layout title="Parlier Unified" subtitle="NJROTC">
    <Rolling />
    <span class="Links">
        <a href="/Parents/">
            <div class="Photo">
                <img src="/Photo/IMG_3.jpeg" alt="Colorguard 1" />
                <h3>Parents</h3>
            </div>
        </a>
        <a href="/cadets/">
            <div class="Photo">
                <img src="/Photo/IMG_1.jpeg" alt="Colorguard 1" />
                <h3>Cadets</h3>
            </div>
        </a>
        <a href="/Calendar/">
            <div class="Photo" >
                <img src="/Photo/IMG_2.jpeg" alt="Colorguard 1" />
                <h3>Calendar</h3>
            </div>
        </a>
    </span>
</Layout>
<style>
    .Links {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }
    .Photo {
        position: relative;
        width: 40vh;
        height: 40vh;
        overflow: hidden;
    }

    .Photo img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        opacity: 0.6;
        transition: transform 0.3s ease;
    }

    .Photo h3 {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        margin: 0;
        padding: 10px;
        text-align: center;
        transform: translateY(100%);
        transition: transform 0.3s ease;
    }
    /* Hover effects */
    .Photo:hover::before {
        transform: scaleX(1);
    }
    
    .Photo:hover::after {
        transform: scaleY(1);
    }
    
    .Photo:hover .border-bottom {
        transform: scaleX(1);
    }
    
    .Photo:hover .border-left {
        transform: scaleY(1);
    }

    .Photo:hover img {
        transform: scale(1.05);
    }

    .Photo:hover h3 {
        transform: translateY(0);
    }
</style>
