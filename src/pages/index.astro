---
import Layout from "../layouts/Layout.astro";
import Rolling from "../components/Rolling.astro";
---

<Layout title="Parlier Unified" subtitle="NJROTC">
    <Rolling />
        <div class="container">
            <div class="links-grid">
                <a href="/parents/" class="photo-card">
                    <div class="photo-container">
                        <img src="/Photo/IMG_3.jpeg" alt="Parents" class="photo-image" />
                        <div class="photo-overlay">
                            <h3 class="photo-title">Parents</h3>
                            <p class="photo-description">Resources and information for parents of NJROTC cadets</p>
                        </div>
                    </div>
                </a>
                <a href="/cadet/" class="photo-card">
                    <div class="photo-container">
                        <img src="/Photo/IMG_1.jpeg" alt="Cadets" class="photo-image" />
                        <div class="photo-overlay">
                            <h3 class="photo-title">Cadets</h3>
                            <p class="photo-description">Training materials, knowledge base, and cadet resources</p>
                        </div>
                    </div>
                </a>
                <a href="/calendar/" class="photo-card">
                    <div class="photo-container">
                        <img src="/Photo/IMG_2.jpeg" alt="Calendar" class="photo-image" />
                        <div class="photo-overlay">
                            <h3 class="photo-title">Calendar</h3>
                            <p class="photo-description">Upcoming events, drills, and important dates</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    <style>
        body
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 4rem 2rem;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 60vh;
        }
        
        .links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            width: 100%;
            max-width: 1000px;
        }
        
        .photo-card {
            text-decoration: none;
            border-radius: 16px;
            overflow: hidden;
            transition: all 0.4s ease;
        }
        
        
        .photo-container {
            position: relative;
            width: 100%;
            height: 300px;
            overflow: hidden;
        }
        
        .photo-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }
        
        .photo-card:hover .photo-image {
            transform: scale(1.1);
        }
        
        .photo-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background: linear-gradient(
                to top,
                rgba(0, 0, 0, 0.9) 0%,
                rgba(0, 0, 0) 0%,
                transparent 100%
            );
            padding: 0rem 1rem;
            text-align: center;
            transform: translateY(0%);
            transition: all 0.4s ease;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            align-items: center;
            min-height: 0%;
        }
        .photo-card:hover .photo-overlay {
            min-height: 100%;
        }
        
        
        .photo-title {
            color: white;
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0 0 0.5rem 0;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.4s ease;
        }
        
        .photo-description {
            color: rgba(250, 250, 245, 0.9);
            font-size: 1rem;
            line-height: 1.5;
            margin: 0;
            max-height: 0;
            opacity: 0;
            overflow: hidden;
            transition: all 0.4s ease;
            transform: translateY(10px);
        }
        
        .photo-card:hover .photo-title {
            animation: none;
            transform: translateY(-10px);
            margin-bottom: 1rem;
            font-size: 2rem;
        }
        .photo-card:hover .photo-description {
            max-height: 100px;
            opacity: 1;
            margin-bottom: 60px;
            transform: translateY(0);
            transition-delay: 0.1s;
        }
        .photo-card {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }
        
        .photo-card.in-view {
            opacity: 1;
            transform: translateY(0);
        }
        
        .photo-card:nth-child(1).in-view {
            transition-delay: 0.1s;
        }
        
        .photo-card:nth-child(2).in-view {
            transition-delay: 0.2s;
        }
        
        .photo-card:nth-child(3).in-view {
            transition-delay: 0.3s;
        }
        
       
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const photoCards = document.querySelectorAll('.photo-card');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in-view');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });
            
            photoCards.forEach(card => {
                observer.observe(card);
            });
        });
    </script>
</Layout>