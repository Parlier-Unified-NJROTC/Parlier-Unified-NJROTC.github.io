---
import Layout from '../../layouts/Layout.astro';

---

<Layout title="Parents" disableHero fancyBackground>

	<section class="teams-selector" aria-labelledby="parents-title">
		<div class="selector-bleed">
			<div class="selector-wrap">
				<div class="selector-grid">
					<div class="department-card">
						<a href="/calendar" class="department-link">
							<div class="card-overlay"></div>
							<div class="department-icon" style="background-image: url('/Photo/Front.jpg')">
								<div class="icon-overlay"></div>
							</div>
							<div class="department-content">
								<div class="content-wrapper">
									<h3 class="department-name">Calendar & Events</h3>
									<p class="department-description">View upcoming training days, competitions, and parent meetings. Sync with our public calendar to stay up to date.</p>
									<div class="department-footer">
										<span class="department-button">VIEW</span>
									</div>
								</div>
							</div>
						</a>
					</div>

					<div class="department-card">
						<a href="/parents/fundraising" class="department-link">
							<div class="card-overlay"></div>
							<div class="department-icon" style="background-image: url('/Photo/IMG_2.jpeg')">
								<div class="icon-overlay"></div>
							</div>
							<div class="department-content">
								<div class="content-wrapper">
									<h3 class="department-name">Fundraising & Donations</h3>
									<p class="department-description">Support the unit through approved fundraisers, volunteering, and donations. See current initiatives and how to help.</p>
									<div class="department-footer">
										<span class="department-button">LEARN MORE</span>
									</div>
								</div>
							</div>
						</a>
					</div>
				</div>
			</div>
		</div>

			<style>
				.teams-selector { padding: 40px 0; background: transparent; }
				.selector-bleed { position: relative; width: 100vw; left: 50%; margin-left: -50vw; margin-right: -50vw; }
				.selector-wrap { overflow: hidden; padding: 20px 0; max-width: 100%; }

				.selector-grid {
					display: grid;
					grid-template-columns: repeat(2, 1fr);
					gap: 18px;
					padding: 0 6vw;
					align-items: stretch;
					box-sizing: border-box;
				}

				/* Department-style card (copied from departments/index.astro) */
				.department-card {
					background: rgba(0, 0, 0, 0.7);
					border-radius: 16px;
					overflow: hidden;
					transition: all 0.4s ease;
					position: relative;
					border: 1px solid rgba(2, 60, 113, 0.7);
					box-shadow: 0 8px 25px rgba(0, 0, 0, 0.5);
					width: 100%;
					max-width: none;
					min-height: 320px;
				}

				.card-overlay {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					background: linear-gradient(45deg, rgba(2, 60, 113, 0.3), rgba(230, 178, 32, 0.1));
					opacity: 0;
					transition: opacity 0.4s ease;
					z-index: 1;
				}

				.department-card:hover {
					transform: translateY(-8px);
					box-shadow: 0 20px 40px rgba(0, 0, 0, 0.7), 0 0 0 1px rgba(230, 178, 32, 0.25);
					border-color: rgba(230, 178, 32, 0.45);
				}

				.department-link { text-decoration: none; color: inherit; display: block; height: 100%; position: relative; z-index: 2; }

				.department-icon {
					height: 220px;
					background-size: cover;
					background-position: center;
					position: relative;
					overflow: hidden;
				}

				.icon-overlay {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					background: linear-gradient(to bottom, rgba(2, 60, 113, 0.7), rgba(0, 0, 0, 0.9));
					transition: transform 0.5s ease;
				}

				.department-card:hover .icon-overlay { transform: scale(1.03); }

				.department-content { padding: 2rem; position: relative; z-index: 2; }

				.content-wrapper { display: flex; flex-direction: column; height: 100%; }

				.department-name { font-family: "Montserrat", sans-serif; font-size: 1.4rem; font-weight: 700; margin-bottom: 0.75rem; color: #fafaf5; }

				.department-description { font-size: 1rem; line-height: 1.6; margin-bottom: 1.25rem; color: rgba(250, 250, 245, 0.9); flex-grow: 1; }

				.department-footer { margin-top: auto; }

				.department-button { display: inline-flex; align-items: center; gap: 8px; padding: 0.6rem 1rem; background: transparent; color: #e6b220; border: 2px solid #e6b220; border-radius: 50px; font-weight: 700; }

				.department-button:hover { background: #e6b220; color: #000; }

				@media (max-width: 980px) {
					.selector-grid { grid-template-columns: 1fr 1fr; padding: 20px; }
					.department-card { min-height: 260px; }
					.department-content { padding: 1.25rem; }
				}
				@media (max-width: 640px) {
					.selector-grid { grid-template-columns: 1fr; padding: 8px; }
					.department-card { border-radius: 8px; min-height: auto; }
					.department-content { padding: 14px; }
				}
			</style>
	</section>

</Layout>
